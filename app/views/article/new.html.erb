<h1>Article#new</h1>

<%= form_with scope: :article ,url: create_article_path,local: true do |form| %>
  <p>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
  </p>

  <p>
    <%= form.label :description %><br>
    <%= form.text_area :description %>
  </p>

  <p>
  <%= form.select :user_id, User.all.collect { |p| [ p.username,p.id ] }, include_blank: false %>
  </p>

  <p>
    <%= form.submit %>
  </p>
<% end %>

